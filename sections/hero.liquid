
<div class="hero">
    <div class="hero-wrapper">
        {% if section.settings.heading != blank %}
            <h1>{{section.settings.heading}}</h1>
        {% endif %}
        {% if section.settings.description != blank %}
            <div class="hero-description">{{section.settings.description}}</div>
        {% endif %}
        {% if section.settings.button_label != blank %}
           <a class="button button--primary" href="{{section.settings.button_link}}">{{section.settings.button_label}}</a>
        {% endif %}
        {% if section.settings.image != blank %}
           
            <div class="image-wrapper">
                <div class="hero-shape-before">
                    {% render 'hero-shape1' %}
                </div>
                <img
                src="{{ section.settings.image | image_url: width: 698 }}"
                alt=""
                width="698"
                height="598"
                loading="lazy"
            >
            <div class="hero-shape-after">
                {% render 'hero-shape2' %}
            </div>
            </div>
            
        {% endif %}
    </div>
</div>


{% schema %}
    {
      "name": "Hero",
      "tag": "section",
      "class": "section",
      "disabled_on": {
        "groups": ["header", "footer"]
      },
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
       
        {
              "type": "text",
              "id": "heading",
              "label": "Heading"
            },
            {
              "type": "richtext",
              "id": "description",
              "label": "Description"
            }
       ,
       {
              "type": "text",
              "id": "button_label",
              "label": "Button Label"
            },
            {
              "type": "url",
              "id": "button_link",
              "label": "Button Link"
            }
      ],
      "blocks": [
       
      ],
      "presets": [
        {
          "name": "Hero",
          "blocks": [
            
          ]
        }
      ]
    }
    {% endschema %}
    